Start
  If (data_pengaduan == valid) then
    Set data[] = data_pengaduan
    data.push(data_user)

    Call simpan(tbl_pengaduan, data)

    Set pesan = 'Buat Pengaduan Berhasil'
    Redirect to Halaman Riwayat Pengaduan
  Else
    Set pesan = 'Data Tidak Valid'
    Redirect to Halaman Buat Pengaduan
  End If
End

Start
  If (data_lpj == valid) then
    Set data[] = data_lpj
    data.push(id_kegiatan)

    Set item_keuangan[] = item_keuangan
    Set item_fisik[] = item_fisik

    Call update(kegiatan, id_kegiatan, data_lpj)

    item_keuangan.push(id_kegiatan)
    Call insert(tbl_item_keuangan, item_keuangan)

    item_fisik.push(id_kegiatan)
    Call insert(tbl_item_fisik, item_fisik)

    Set pesan = 'Buat Laporan Pertanggungjawaban Sukses'
    Redirect to Halaman Daftar Kegiatan
  Else
    Set pesan = 'Data Tidak Valid'
    Redirect to Halaman Buat Laporan Pertanggungjawaban
  End If
End

Start
  If (data_surat == valid) then
    Set data[] = data_surat    

    Call insert(tbl_kelahiran, data)

    Set pesan = 'Buat Surat Kelahiran Berhasil'
    Redirect to Halaman Riwayat Surat
  Else
    Set pesan = 'Data Tidak Valid'
    Redirect to Halaman Surat Kelahiran
  End If
End
